    content: "â–¹";
    position: absolute;
    left: 0;
    color: var(--accent-color);
  }
  
  @media (max-width: 992px) {
    .skills-container {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .about-content {
      grid-template-columns: 1fr;
    }
    
    .about-image {
      order: -1;
      margin: 0 auto var(--spacing-lg);
    }
  }
  
  @media (max-width: 576px) {
