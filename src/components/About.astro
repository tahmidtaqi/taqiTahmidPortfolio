    filter: none;
    mix-blend-mode: normal;
  }
  
  .skills-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-md);
    margin-top: var(--spacing-md);
  }
  
  .skills-list {
    list-style-type: none;
    padding-left: 0;
  }
  
  .skills-list li {
    position: relative;
    padding-left: 20px;
    margin-bottom: var(--spacing-xs);
    color: var(--text-secondary);
  }
  
